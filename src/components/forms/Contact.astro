<section>
  <div class="relative flex justify-center w-full px-0">
    <div class="relative z-10 flex flex-col items-center flex-1 w-full bg-white py-16">
      <div class="w-full">

        <!-- Full-width Fabform embed -->
        <iframe 
          id="fabform-embed"
          src="https://fabform.io/v/26pCM9YsV8EM"
          class="w-full"
          style="min-height:700px; border:0;" 
          frameborder="0">
        </iframe>

      </div>
    </div>
  </div>
</section>

<script>
  // Auto-resize Fabform iframe based on messages from Fabform
  window.addEventListener("message", function(event) {
    if (event.origin.includes("fabform.io")) {
      const data = event.data;
      if (data.type === "fabform:resize") {
        const iframe = document.getElementById("fabform-embed");
        if (iframe) {
          iframe.style.height = data.height + "px";
        }
      }
    }
  });
</script>

