---
import { teachers } from "../../data/teachers.json";
---
<section>
  <div class="relative px-8 py-12 mx-auto md:px-12 lg:px-32 max-w-7xl lg:py-24">
    <div class="max-w-2xl mx-auto text-center">
      <h1
        class="text-4xl font-semibold font-display text-blue-950 sm:text-6xl">
        Meet our Teachers.
      </h1>
      <p class="mt-4 text-slate-600 text-base max-w-2xl">
        Guiding you through the world of brand & identity design
      </p>
    </div>
    <ul
      class="grid grid-cols-1 mt-12 list-none md:grid-cols-2 lg:grid-cols-3  gap-x-2 gap-y-24 lg:mt-24 relative   p-2 rounded-3xl bg-gradient-to-t from-white/20"
      role="list">
        {
        teachers.map((template) => (
          <>
            <li class="        flex flex-col h-full justify-between">
              <div>
                <div class="flex flex-col text-center  items-center gap-4 w-full">
                  <div class="rounded-full border">
                    <img
                      class="inline-block w-12 h-12 mx-auto  shrink-0"
                      src={template.avatar}
                      alt={template.description}
                    />
                  </div>
                  <div >
                    <p class="text-lg  font-display text-blue-950 lg:text-xl">
                      {template.teacher}
                    </p>
                     <p class="text-xs  font-display text-slate-500">
                      {template.profession}
                    </p>
                  </div>
                </div>
                <p class="mt-8 text-sm text-blue-950 text-center">
                  {template.description}
                </p>
              </div>
              <div class="inline-flex mt-8 justify-center items-center gap-4 w-full">
                <a
                  href={template.url}
                  class="items-center inline-flex w-full focus:outline-disc bg-green-500 duration-500 focus:ring-2 focus:ring-green-600 focus:ring-offset-2 font-medium  h-12 hover:bg-green-600 justify-center px-6 py-1 rounded-full text-white text-center text-sm lg:w-auto ">
                  View  {template.teacher}  profile
                </a>
                <div>
              </div>
            </li>
          </>
        ))
      }

    </ul>
  </div>
</section>
