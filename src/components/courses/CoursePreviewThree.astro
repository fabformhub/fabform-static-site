---
import { courses } from "../../data/courses.json";
---

<section class="grid grid-cols-1 lg:grid-cols-2 overflow-hidden">
  <div>
    <div class="lg:px-48 md:px-12 px-8 py-12 lg:py-24">
      <p class="text-4xl font-semibold font-display text-blue-950">
        Explore our most <span class="lg:block">popular courses</span>
      </p>
      <p class="text-slate-500 mt-4 max-w-sm">
        Dive into courses loved by learners worldwide
      </p>
      <div class="mt-12 flex flex-col lg:flex-row lg:items-center w-full">
        <div class="relative flex flex-col gap-2 lg:flex-row">
          <a
            href="/courses/all-courses-three"
            class="items-center inline-flex w-full focus:outline-disc bg-green-500 duration-500 focus:ring-2 focus:ring-green-600 focus:ring-offset-2 font-medium lg:w-auto h-12 hover:bg-green-600 justify-center px-6 py-1 gap-3 rounded-full text-white text-center text-sm"
            >See all courses <svg
              xmlns="http://www.w3.org/2000/svg"
              class="icon icon-tabler icon-tabler-circle-chevron-right"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              stroke-width="1.25"
              stroke="currentColor"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round">
              <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
              <path d="M11 9l3 3l-3 3"></path>
              <path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0z"></path>
            </svg></a
          >
        </div>
      </div>
    </div>
  </div>
  <div
    class="flex flex-wrap mx-auto md:flex-nowrap gap-2 lg:gap-0 p-12 lg:-ml-12">
    {
      courses.slice(0, 3).map((template) => (
        <div>
          <div class="bg-blue-50      p-8 rounded-3xl  shadow shadow-blue-500/20 h-full justify-between relative flex flex-col items-start m-1 transition duration-300 ease-in-out delay-150 transform   lg:w-80 lg:-ml-16 lg:hover:-translate-x-16 lg:hover:-translate-y-8">
            <div>
              <div class="flex flex-col items-center gap-4 w-full">
                <img
                  class="inline-block w-24 h-24 rounded-full    shrink-0"
                  src={template.avatar}
                  alt={template.description}
                />

                <div class="lg:inline-flex text-center items-center gap-4 justify-center">
                  <p class="text-lg  font-display text-blue-500 lg:text-xl">
                    {template.title}
                  </p>
                  <p class="text-blue-950 text-xl font-display">
                    {template.pricing}
                  </p>
                </div>
                <p class="mt-4 text-sm text-blue-900 text-center">
                  {template.description}
                </p>
              </div>
            </div>
            <div class="flex flex-col mt-4 justify-between items-center gap-4 w-full pt-2">
              <div>
                <a
                  href={template.url}
                  class="items-center inline-flex w-full focus:outline-disc bg-blue-50 duration-200 focus:ring-2 focus:ring-blue-60 focus:ring-offset-2 font-medium lg:w-auto h-8 hover:bg-blue-100 justify-center px-6 py-1 rounded-full text-blue-600 text-center text-xs ">
                  Enroll Now &nbsp; &rarr;
                </a>
              </div>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</section>
